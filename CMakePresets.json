{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base-preset",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}"
    },
    {
      "name": "clang-preset",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang-16",
        "CMAKE_CXX_COMPILER": "clang++-16",
        "CLANG_FORMAT_COMMAND": "clang-format-16",
        "CMAKE_CXX_FLAGS": "-stdlib=libc++",
        "CMAKE_EXE_LINKER_FLAGS": "-lstdc++ -lc++abi -fuse-ld=lld"
      }
    },
    {
      "name": "gcc-preset",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc-12",
        "CMAKE_CXX_COMPILER": "g++-12"
      }
    },
    {
      "name": "msvc-preset",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "BUILD_SHARED_LIBS": "Off"
      }
    },
    {
      "name": "clang-release",
      "displayName": "Linux AMD64 clang Release",
      "inherits": [
        "base-preset",
        "clang-preset"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "clang-debug",
      "displayName": "Linux AMD64 clang Debug",
      "inherits": [
        "base-preset",
        "clang-preset"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "clang-relwithdebinfo",
      "displayName": "Linux AMD64 clang RelWithDebInfo",
      "inherits": [
        "base-preset",
        "clang-preset"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "clang-sanitizer",
      "displayName": "Clang Sanitizer",
      "inherits": [
        "base-preset",
        "clang-preset"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "SORO_SAN": "ON"
      }
    },
    {
      "name": "clang-tidy",
      "displayName": "Clang Tidy",
      "inherits": [
        "base-preset",
        "clang-preset"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "SORO_LINT": "ON"
      }
    },
    {
      "name": "gcc-release",
      "displayName": "Linux AMD64 GCC Release",
      "inherits": [
        "base-preset",
        "gcc-preset"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "gcc-debug",
      "displayName": "Linux AMD64 GCC Debug",
      "inherits": [
        "base-preset",
        "gcc-preset"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "gcc-relwithdebinfo",
      "displayName": "Linux AMD64 GCC RelWithDebInfo",
      "inherits": [
        "base-preset",
        "gcc-preset"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "msvc-release",
      "displayName": "MSVC Release",
      "inherits": [
        "base-preset",
        "msvc-preset"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "msvc-relwithdebinfo",
      "displayName": "MSVC RelWithDebInfo",
      "inherits": [
        "base-preset",
        "msvc-preset"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "msvc-debug",
      "displayName": "MSVC Debug",
      "inherits": [
        "base-preset",
        "msvc-preset"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "gcc-cuda-release",
      "displayName": "Linux AMD64 GCC CUDA Release",
      "inherits": [
        "base-preset"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_COMPILER": "gcc-10",
        "CMAKE_CXX_COMPILER": "g++-10",
        "SORO_CUDA": "On"
      }
    },
    {
      "name": "gcc-cuda-debug",
      "displayName": "Linux AMD64 GCC CUDA Debug",
      "inherits": [
        "base-preset"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "gcc-10",
        "CMAKE_CXX_COMPILER": "g++-10",
        "SORO_CUDA": "On"
      }
    },
    {
      "name": "clang-cista-release",
      "displayName": "Linux AMD64 Clang CISTA Release",
      "inherits": [
        "base-preset",
        "clang-preset"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "SERIALIZE": "On"
      }
    },
    {
      "name": "clang-cista-debug",
      "displayName": "Linux AMD64 Clang CISTA Debug",
